<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<RadioButton
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/radio_select"
    />
    <TextView
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/radio_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trịnh Việt Hoàng"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:id="@+id/nameKhachHang"
        />
    <View
        app:layout_constraintStart_toEndOf="@+id/nameKhachHang"
        android:layout_width="1dp"
        android:id="@+id/View"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#03A9F4"
        android:layout_height="20dp"
        />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:text="0868897306"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/menu_location"
            app:layout_constraintStart_toEndOf="@id/View"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />
<ImageView
    android:id="@+id/menu_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/menu_location"
    />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhà: "
        android:textColor="#047C3B"
        android:layout_marginTop="9dp"
        android:textSize="14sp"
        android:id="@+id/text_2"
        app:layout_constraintStart_toEndOf="@+id/radio_select"
        app:layout_constraintTop_toBottomOf="@+id/nameKhachHang"
        />

    <TextView
        android:id="@+id/NameCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:text="Thanh hóa"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_2"
        app:layout_constraintTop_toBottomOf="@id/phoneNumber"
        />
    <ImageView
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@+id/NameCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconDefault"
        android:layout_marginTop="4dp"
        android:src="@drawable/baseline_flag_24"
        app:layout_constraintStart_toEndOf="@id/radio_select"
        />

    <TextView
        android:id="@+id/textDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Mặc định"
        android:textColor="#047C3B"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/iconDefault"
        app:layout_constraintTop_toBottomOf="@id/NameCity" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_marginEnd="11dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#03A9F4"
        />
</LinearLayout>